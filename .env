# Environment variables - configuration that can change per environment (dev/test/prod)
# These values are loaded by the dotenv library
# ===== UI Configuration =====
BASE_URL=https://github.com          # The base URL of the application under test
BROWSER=chromium                       # Which browser to use (chromium/firefox/webkit)
HEADLESS=false                          # Run browser without UI (true) or with UI (false)
TIMEOUT=30000                          # Default timeout in milliseconds (30 seconds)
SCREENSHOT_ON_FAILURE=true             # Take screenshot when test fails
RUN_BROWSER_VERSION=141.0.7390.37
TEST_COMPLETED_TIME=12/8/2025, 10:14:09 PM
TEST_STARTED_TIME=12/8/2025, 10:14:06 PM

# ===== API Configuration =====
OAUTH_API_URL=https://api-m.sandbox.paypal.com
TRANSACTION_API_URL=https://api-m.sandbox.paypal.com
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
API_USERNAME=your_api_username
API_PASSWORD=your_api_password
OAUTH_BODY_FORM=grant_type=client_credentials
API_TIMEOUT=30000
